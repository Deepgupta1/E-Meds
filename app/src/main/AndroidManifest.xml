<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.e_meds">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMEDS"
        tools:targetApi="31">
        <activity
            android:name=".activities.SplashSreen"
            android:exported="true"
            android:theme="@style/SplashTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.AdminLogin"
            android:exported="true"
            android:label="Admin Login"
            android:parentActivityName=".activities.AdminLogin"
            android:theme="@style/NewTheme" />
        <activity
            android:name=".activities.ReadActivity"
            android:exported="true"
            android:label="All Medicines"
            android:parentActivityName=".activities.ReadActivity"
            android:theme="@style/NewTheme" />
        <activity
            android:name=".activities.ForAdmin"
            android:exported="true"
            android:label="For Admin"
            android:parentActivityName=".activities.ForAdmin"
            android:theme="@style/NewTheme" />
        <activity
            android:name=".activities.MyOrders"
            android:exported="true"
            android:label="My orders"
            android:parentActivityName=".activities.MyOrders"
            android:theme="@style/NewTheme" />
        <activity
            android:name=".activities.MyCart"
            android:exported="true"
            android:label="My Cart"
            android:parentActivityName=".activities.MyCart"
            android:theme="@style/NewTheme" />
        <activity
            android:name=".activities.Medicine"
            android:exported="true"
            android:label="Medicines"
            android:parentActivityName=".activities.Medicine"
            android:theme="@style/NewTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="E-Meds"
            android:theme="@style/NewTheme">

        </activity>
    </application>

</manifest>